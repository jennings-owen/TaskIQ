# Frontend Development Dockerfile for React Application
# This version uses npm start for hot-reload during development

FROM node:22-alpine

# Set working directory
WORKDIR /app

# Set environment variables
ENV NODE_ENV=development
ENV PATH=/app/node_modules/.bin:$PATH

# Accept build argument for backend URL (for dev mode)
ARG REACT_APP_BACK_END_URL=http://localhost:8000
ENV REACT_APP_BACK_END_URL=$REACT_APP_BACK_END_URL

# Copy package files and existing node_modules
COPY package*.json ./
COPY node_modules ./node_modules

# Copy application code
COPY . .

# Create non-root user for security
RUN addgroup -g 1000 appgroup && \
    adduser -D -u 1000 -G appgroup appuser && \
    chown -R appuser:appgroup /app
USER appuser

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

# Start development server
CMD ["npm", "start"]

